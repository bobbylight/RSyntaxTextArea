<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE RSyntaxTheme SYSTEM "theme.dtd">

<!--
	RSyntaxTextArea's default theme.
	See theme.dtd and org.fife.ui.rsyntaxtextarea.Theme for more information.
-->
<RSyntaxTheme version="1.0">

   <!-- Omitting baseFont will use a system-appropriate monospaced. -->
   <!--<baseFont family="..." size="13"/>-->
   
   <!--  General editor colors. -->
   <background color="ff0000"/>
   <caret color="ff0000"/>
   <selection fg="ff0000" useFG="false" bg="ff0000" roundedEdges="true"/>
   <currentLineHighlight color="ff0000" fade="true"/>
   <marginLine fg="ff0000"/>
   <markAllHighlight color="ff0000"/>
   <markOccurrencesHighlight color="ff0000" border="true"/>
   <matchedBracket fg="ff0000" bg="ff0000" highlightBoth="true" animate="true"/>
   <hyperlinks fg="ff0000"/>
   <secondaryLanguages>
      <language index="1" bg="ff0000"/>
      <language index="2" bg="ff0000"/>
      <language index="3" bg="ff0000"/>
   </secondaryLanguages>
   
   <!-- Gutter styling. -->
   <gutterBorder color="ff0000"/>
   <lineNumbers fg="ff0000" fontFamily="Arial" fontSize="22"/>
   <foldIndicator fg="ff0000" iconBg="ff0000" iconArmedBg="ff0000"/>
   <iconRowHeader activeLineRange="ff0000" inheritsGutterBG="true"/>
   
   <!-- Syntax tokens. -->
   <tokenStyles>
      <style token="IDENTIFIER" fg="0000ff"/> <!-- Test a hex value without ff for red -->
      <style token="RESERVED_WORD" fg="$ff0000" bold="true"/> <!-- We all '$' as an optional prefix -->
      <style token="RESERVED_WORD_2" fg="ff0000" bold="true" fontSize="30"/>
      <style token="ANNOTATION" fg="ff0000" fontFamily="Arial"/>
      <style token="COMMENT_DOCUMENTATION" fg="ff0000" italic="true"/>
      <style token="COMMENT_EOL" fg="ff0000" italic="true"/>
      <style token="COMMENT_MULTILINE" fg="ff0000" italic="true"/>
      <style token="COMMENT_KEYWORD" fg="ff0000" bold="true"/>
      <style token="COMMENT_MARKUP" fg="ff0000"/>
      <style token="DATA_TYPE" fg="ff0000" bold="true"/>
      <style token="FUNCTION" fg="ff0000"/>
      <style token="LITERAL_BOOLEAN" fg="ff0000" bold="true"/>
      <style token="LITERAL_NUMBER_DECIMAL_INT" fg="ff0000"/>
      <style token="LITERAL_NUMBER_FLOAT" fg="ff0000"/>
      <style token="LITERAL_NUMBER_HEXADECIMAL" fg="ff0000"/>
      <style token="LITERAL_STRING_DOUBLE_QUOTE" fg="ff0000"/>
      <style token="LITERAL_CHAR" fg="ff0000"/>
      <style token="LITERAL_BACKQUOTE" fg="ff0000"/>
      <style token="MARKUP_TAG_DELIMITER" fg="ff0000"/>
      <style token="MARKUP_TAG_NAME" fg="ff0000"/>
      <style token="MARKUP_TAG_ATTRIBUTE" fg="ff0000"/>
      <style token="MARKUP_TAG_ATTRIBUTE_VALUE" fg="ff0000"/>
      <style token="MARKUP_COMMENT" fg="ff0000" italic="true"/>
      <style token="MARKUP_DTD" fg="ff0000"/>
      <style token="MARKUP_PROCESSING_INSTRUCTION" fg="ff0000"/>
      <style token="MARKUP_CDATA" fg="ff0000"/>
      <style token="MARKUP_CDATA_DELIMITER" fg="ff0000"/>
      <style token="MARKUP_ENTITY_REFERENCE" fg="ff0000"/>
      <style token="OPERATOR" fg="ff0000"/>
      <style token="PREPROCESSOR" fg="ff0000"/>
      <style token="REGEX" fg="ff0000"/>
      <style token="SEPARATOR" fg="ff0000"/>
      <style token="VARIABLE" fg="ff0000" bold="true"/>
      <style token="WHITESPACE" fg="ff0000"/>
      
      <style token="ERROR_IDENTIFIER" fg="ff0000" bg="ff0000"/>
      <style token="ERROR_NUMBER_FORMAT" fg="ff0000" bg="ff0000"/>
      <style token="ERROR_STRING_DOUBLE" fg="ff0000" bg="ff0000"/>
      <style token="ERROR_CHAR" fg="ff0000" bg="ff0000"/>
   </tokenStyles>

</RSyntaxTheme>
